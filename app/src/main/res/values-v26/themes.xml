<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemCreatureListTextViewLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:font">@font/intro_regular</item>
    </style>

    <style name="ItemCreatureListTextViewValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:font">@font/intro_regular</item>
    </style>

    <style name="attributeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/attribute_label_text_size</item>
        <item name="android:layout_margin">@dimen/attribute_label_layout_margin</item>
        <item name="android:font">@font/intro_regular</item>
    </style>

    <style name="newCreatureDetailTextViewValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/attribute_label_text_size</item>
        <item name="android:layout_margin">@dimen/attribute_label_layout_margin</item>
        <item name="android:gravity">end</item>
        <item name="android:font">@font/intro_regular</item>
    </style>
</resources>